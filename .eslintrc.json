{
    "extends": ["plugin:github/recommended"],
    "parser": "esprima",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "rules": {
      "i18n-text/no-en": "off",
      "eslint-comments/no-use": "off",
      "import/no-namespace": "off",
      "no-unused-vars": "off",
      "camelcase": "off",
      "semi": "off"
    },
    "env": {
      "node": true,
      "es6": true
    }
  }
